<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div>	
			<table>
				<tr><td colspan="2">Add New Cards</td></tr>
				<tr><td>Term:</td><td>Definition:</td></tr>
				<tr><td><g:TextBox ui:field="termTextBox"/></td><td><g:TextBox ui:field="definitionTextBox"/></td></tr>
				<tr><td colspan="2"><g:Button ui:field="addCardButton"/><g:Button ui:field="csvUploadButton"/><g:Button ui:field="closeCardManagerButton"/></td></tr>
			</table>
		</div>
		
		<g:VerticalPanel ui:field="uploadCsvPanel"/>
		
		<div>
			<g:VerticalPanel ui:field="cardBrowserPanel"/>
		</div>
	</g:HTMLPanel>
	
	
</ui:UiBinder> 

