<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <g:HTMLPanel>
  	<g:Label ui:field="errorLabel"/>
  	<table>
  		<tr>
  			<td colspan="3">
  			<g:Label ui:field='wordLabel'/>
  			<g:Label ui:field='definitionLabel'/>
  			</td>
  		</tr>
		<tr>
			<td><g:Button ui:field='yesButton'>Yup</g:Button></td>
			<td><g:Button ui:field='flipButton'>Flip</g:Button></td>
			<td><g:Button ui:field='noButton'>Nope</g:Button></td>
		</tr>    
    </table>
    
    <g:FlexTable ui:field="debugDumpFlexTable"/>
  </g:HTMLPanel>

</ui:UiBinder>