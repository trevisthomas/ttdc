<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- The above doctype is to allow for special html characters in this xml file -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	
	<g:HTMLPanel ui:field="contentPanelElement">
		<table class="tt-fill">
			<tr>
				<td>
					<div class="tt-float-left">
						Order: <g:SimplePanel styleName="tt-inline" ui:field="sortOrderElement"/>
					</div>
					<div class="tt-float-right">
						Size: <g:SimplePanel  styleName="tt-inline" ui:field="pageSizeElement"/>
					</div>
				</td>
			</tr>
			<tr>
				<td class="tt-text-normal tt-fill tt-paginated-post-header">
					<g:Label styleName="tt-float-left" ui:field="pageSummaryLabel"/>
					<g:Widget ui:field="paginationNanoElement"/>
				</td>	
			</tr>
			<tr>
				<td>
					<g:SimplePanel ui:field="postContainerElement"/>
					
				</td>	
			</tr>
			<tr>
				<td>
					<g:SimplePanel ui:field="paginationElement"/>
				</td>
			</tr>
			
		</table>		
	</g:HTMLPanel>
</ui:UiBinder>
