<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- The above doctype is to allow for special html characters in this xml file -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:t='urn:import:org.ttdc.gwt.client.presenters.util'>
	<g:HTMLPanel styleName="tt-post-conversation" >
		<div class="tt-post">
			<div class="tt-post-panel-head">
				<table class="tt-fill">
					<tr>
						<td class="tt-fill">
							<div class="tt-post-panel-head-title">
								<span>
									<g:Hyperlink ui:field="titleElement" />
								</span>
							</div>
						</td>
						<td>
							<table class="tt-inline tt-float-right">
								<tr>
									<td>
										
									</td>
									<td>
										<g:Label ui:field="replyCountElement"></g:Label>
									</td>
									<td>
										<g:Label ui:field="conversationCountElement"></g:Label>
									</td>
								</tr>
							</table>
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<table class="tt-fill">
								<tr>
									<td>
										<g:Widget ui:field="averageRatingElement" />
									</td>
									<td>
										
									</td>
									<td class="tt-text-right tt-post-panel-head-date"></td>
								</tr>
							</table>
						</td>
					</tr>
				</table>
			</div>
			
			<div class="tt-post-container" style="clear:both;">
			
				<div width="100%" class="tt-text-mini">
					<span class="tt-float-right">
						<t:ClickableHoverSyncPanel ui:field="moreOptionsElement"/>
					</span>
				</div>
				
				<table>
					<tr>
						<td>
							<g:Widget ui:field="posterElement" />
						</td>
						<td width="100%">
							<div width="100%" class="tt-reviewSummaryList">
								<p class="tt-reviewSummaryList-header">Reviews:</p>
								<g:VerticalPanel ui:field="reviewsElement" />
							</div>
						</td>
					</tr>
				</table>
			</div>
			<g:SimplePanel ui:field="commentElement" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder>