<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- The above doctype is to allow for special html characters in this xml file -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:HTMLPanel>
			<div class="tt-post-expanded">
				<div class="tt-post-expanded-header">
					<g:Widget styleName="tt-float-left" ui:field="avatarElement" />
					<span class="tt-float-left tt-post-expanded-creator">
						by <g:Hyperlink ui:field="creatorLinkElement" />
					</span>
					<table class="tt-inline">
						<tr>
							<td><g:Label ui:field="postPrivateElement" /></td>
							<td><g:Label ui:field="postNwsElement" /></td>
							<td><g:Label ui:field="postInfElement" /></td>
						</tr>
					</table>
					<span class="tt-float-right tt-post-expanded-date">
						<g:Widget ui:field="createDateElement" />
					</span>
					
				</div>
											
				<div class="tt-post-expanded-content" >
					<g:Label ui:field="postUnReadElement" /><g:Label ui:field="postReadElement" />
					
					<span class="tt-float-right">
						<g:Anchor ui:field="moreOptionsElement"/>
					</span>
					<span class="tt-post-body tt-text-normal" ui:field="bodyElement" />
				</div>
				<div class="tt-fill tt-text-right tt-text-mini">
					
				</div>
				<div class="tt-post-footer">
					<g:SimplePanel ui:field="likesElement"></g:SimplePanel>
					<g:Widget ui:field="tagsElement"></g:Widget>
				</div>
			</div>
	</g:HTMLPanel>
</ui:UiBinder>