<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- The above doctype is to allow for special html characters in this xml file -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:HTMLPanel>
			<div class="tt-post-container tt-post-expanded" width="100%">
				<div width="100%" class="tt-text-mini">
					<span class="tt-float-left">
						By <g:Hyperlink ui:field="creatorLinkElement" />
					</span>
					<g:Label ui:field="postUnReadElement" styleName="tt-float-left" />
					<span class="tt-float-left">
						
					</span>
					<span class="tt-float-right">
						<g:Anchor ui:field="moreOptionsElement"/>
					</span>
				</div>
											
				<div width="100%" style="clear:both;" >
					<div class="tt-float-right">
						<g:Widget styleName="tt-float-right" ui:field="avatarElement" />
					</div>
					<span class="tt-post-body tt-text-normal" ui:field="bodyElement" />
				</div>
				<div class="tt-fill tt-text-right tt-text-mini">
					<g:Widget ui:field="createDateElement" />
				</div>
			</div>
	</g:HTMLPanel>
</ui:UiBinder>