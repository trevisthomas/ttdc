<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- The above doctype is to allow for special html characters in this xml file -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:HTMLPanel>
		<div class="tt-post">
			<div>
				<span class="tt-post-title tt-text-large">
					<g:Hyperlink ui:field="titleElement" />
				</span>
					
				<span class="tt-post-reply-count" ui:field="replyCountElement" />
			</div>
			<div class="tt-post-container" style="clear:both;">
				<table>
					<tr>
						<td>
							<g:Widget ui:field="posterElement" />
						</td>
						<td width="100%">
							
							<div width="100%" style="clear:both;" >
								Average Rating: <g:Widget ui:field="averageRatingElement" />
							</div>
							
							<div width="100%" style="clear:both;" >
								Reviews:
								<g:VerticalPanel ui:field="reviewsElement" />
							</div>
							
							
						</td>
					</tr>
				</table>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>