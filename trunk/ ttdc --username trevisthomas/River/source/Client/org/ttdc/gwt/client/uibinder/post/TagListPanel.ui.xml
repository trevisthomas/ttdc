<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- The above doctype is to allow for special html characters in this xml file -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:HTMLPanel styleName="tt-fill tt-color-tagList">
			<g:HTMLPanel ui:field="tagListElement" styleName="tt-tagList-forum">
				<div class="tt-inline">Forum:</div>
				<g:FlowPanel styleName="tt-inline" ui:field="tagsElement">
				</g:FlowPanel>
				<!-- 
				<g:HTMLPanel ui:field="tagEditElement">
					(<g:Anchor ui:field="editTagsLinkElement" styleName="tt-cursor-pointer"/>)  
				</g:HTMLPanel>
				-->
				
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="editableTagListElement">
				<table class="tt-fill tt-text-normal">
					<tr>	
						<td><div class="tt-text-normal-bold">Flags:</div></td>
					</tr>
					<tr>
						<td style="padding: 0 0 0 5px;">
							<g:CheckBox ui:field="nwsCheckBoxElement">NWS</g:CheckBox>
							<g:CheckBox ui:field="infCheckBoxElement">Informative</g:CheckBox>
							<g:CheckBox ui:field="privateCheckBoxElement">Private</g:CheckBox>
							<g:CheckBox ui:field="lockedCheckBoxElement">Locked</g:CheckBox>
							<g:CheckBox ui:field="deletedCheckBoxElement">Deleted</g:CheckBox>
							<g:CheckBox ui:field="reviewCheckBoxElement">Review</g:CheckBox>
						</td>
					</tr>
				
					<g:HTMLPanel ui:field="forumListElement">
						<tr>
							<td><div class="tt-text-normal-bold">Forums:</div></td>
						</tr>
						<tr>
							<td style="padding: 0 0 0 5px;"><g:FlowPanel ui:field="editableTagsElement"/></td>
						</tr>
						<tr>
							<td><g:SimplePanel styleName="tt-inline" ui:field="tagSelectorElement"/><g:Button ui:field="addButtonElement"/></td>
						</tr>
					</g:HTMLPanel>
					<tr>
						<td>
						<g:Button ui:field="cancelButtonElement"/>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
			
	</g:HTMLPanel>
</ui:UiBinder>
